<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FontStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">@dimen/btn_main_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextViewSearchStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_buttons</item>
        <item name="android:paddingStart">@dimen/settings_left</item>
        <item name="android:paddingEnd">@dimen/settings_right</item>
        <item name="android:textSize">@dimen/btn_settings_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="SwitchSearchStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_buttons</item>
        <item name="android:paddingStart">@dimen/settings_left</item>
        <item name="android:paddingEnd">@dimen/settings_right</item>
        <item name="android:textSize">@dimen/btn_settings_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:thumbTint">@color/text_gray</item>
        <item name="android:trackTint">@color/text_gray</item>
    </style>
    <style name="TextViewHeaderStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ImageViewHeaderStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:src">@drawable/ic_arrow</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_buttons</item>
    </style>
    <style name="TextViewPrimarySearchItemStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextViewSecondarySearchItemStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextViewSearchStub">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="ButtonSearchRefresh">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>