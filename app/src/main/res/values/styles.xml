<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FontStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MainButtonStyle" parent="Theme.PlaylistMaker">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
<!--        <item name="android:backgroundTint">?attr/colorPrimary</item>-->
<!--        <item name="android:textColor">@color/black</item>-->
<!--        <item name="android:textColor">?attr/colorOnPrimary</item>-->
        <item name="android:textSize">@dimen/btn_main_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_buttons</item>
        <item name="android:paddingStart">@dimen/settings_left</item>
        <item name="android:paddingEnd">@dimen/settings_right</item>
<!--        <item name="android:textColor">"?attr/colorOnPrimary"</item>-->
        <item name="android:textSize">@dimen/btn_settings_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_height_buttons</item>
    </style>
</resources>
